@page
@model SmartCafe_Web.Pages.MenuItems.EditMenuItemModel
@{
    // If following line of code is uncommented, editmenuitem page is slightly inaccurate 
    // Display wise, nav-bar is wrong and footer isn't colored properly.
    //Layout = "_Layout-Authenticated";
}
<div class="row text-center">
    <div class="col-12">
        <label class="form-label fs-1">Edit Item</label>
    </div>

</div>
<form method="post">
    <!-- Need the following line, or MenuItemID will be 0, and wont be able to edit item, wont work properly. -->
    <input type="hidden" asp-for="CurrentItem.MenuItemID" />
    <div class="row my-2">
        <div class="col-4">
            <label asp-for="CurrentItem.ItemName" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="CurrentItem.ItemName" type="text" class="form-control" />
            <span asp-validation-for="CurrentItem.ItemName" class="text-danger"></span>
        </div>
    </div>

    <div class="row my-2">
        <div class="col-4">
            <label asp-for="CurrentItem.ItemImage" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="CurrentItem.ItemImage" type="text" class="form-control" />
            <span asp-validation-for="CurrentItem.ItemImage" class="text-danger"></span>
        </div>
    </div>

    <div class="row my-2">
        <div class="col-4">
            <label asp-for="CurrentItem.Price" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="CurrentItem.Price" type="text" class="form-control" />
            <span asp-validation-for="CurrentItem.Price" class="text-danger"></span>
        </div>
    </div>

    <div class="row my-2">
        <div class="col-4">
            <label asp-for="CurrentItem.ItemTypeID" class="form-label"></label>
        </div>
        <div class="col-12">
            <select asp-for="CurrentItem.ItemTypeID" class="form-control" asp-items="Model.ItemType"></select>
            <span asp-validation-for="CurrentItem.ItemTypeID" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-4">
            <label class="form-label">Ingredients</label>
        </div>
        <div class="col-12">
            @foreach (var n in Model.Ingredients)
            {
                <input type="checkbox" value="@n.IngredientID" class="form-check-input" name="SelectedMenuItemIngredientsIDs" checked="@n.IsSelected" />
                <label class="form-label">@n.IngredientName</label>
            }
        </div>
    </div>

    <div class="row my-2">
        <div class="col-12">
            <button type="submit" class="form-control btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-floppy" viewBox="0 0 20 20">
                    <path d="M11 2H9v3h2z" />
                    <path d="M1.5 0h11.586a1.5 1.5 0 0 1 1.06.44l1.415 1.414A1.5 1.5 0 0 1 16 2.914V14.5a1.5 1.5 0 0 1-1.5 1.5h-13A1.5 1.5 0 0 1 0 14.5v-13A1.5 1.5 0 0 1 1.5 0M1 1.5v13a.5.5 0 0 0 .5.5H2v-4.5A1.5 1.5 0 0 1 3.5 9h9a1.5 1.5 0 0 1 1.5 1.5V15h.5a.5.5 0 0 0 .5-.5V2.914a.5.5 0 0 0-.146-.353l-1.415-1.415A.5.5 0 0 0 13.086 1H13v4.5A1.5 1.5 0 0 1 11.5 7h-7A1.5 1.5 0 0 1 3 5.5V1H1.5a.5.5 0 0 0-.5.5m3 4a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V1H4zM3 15h10v-4.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5z" />
                </svg> 
                Save Changes
            </button>
        </div>
    </div>
</form>