@page
@model SmartCafe_Web.Pages.MenuItems.SearchMenuItemsModel
@{
}
<div class="row txt-center">
    <div class="col-12">
        <label class="form-label fs-1">Menu</label>
    </div>
</div>
@if (Model.CanManageMenuItems)
{
    <div class="row my-2">
        <div class="col-2">
            <a asp-page="/MenuItems/AddMenuItem" class="btn btn-success">
                <svg xmlns="http://www.w3.org/2000/svg" width="23" height="23" fill="currentColor" class="bi bi-cup-hot" viewBox="0 0 23 23">
                    <path fill-rule="evenodd" d="M.5 6a.5.5 0 0 0-.488.608l1.652 7.434A2.5 2.5 0 0 0 4.104 16h5.792a2.5 2.5 0 0 0 2.44-1.958l.131-.59a3 3 0 0 0 1.3-5.854l.221-.99A.5.5 0 0 0 13.5 6zM13 12.5a2 2 0 0 1-.316-.025l.867-3.898A2.001 2.001 0 0 1 13 12.5M2.64 13.825 1.123 7h11.754l-1.517 6.825A1.5 1.5 0 0 1 9.896 15H4.104a1.5 1.5 0 0 1-1.464-1.175" />
                    <path d="m4.4.8-.003.004-.014.019a4 4 0 0 0-.204.31 2 2 0 0 0-.141.267c-.026.06-.034.092-.037.103v.004a.6.6 0 0 0 .091.248c.075.133.178.272.308.445l.01.012c.118.158.26.347.37.543.112.2.22.455.22.745 0 .188-.065.368-.119.494a3 3 0 0 1-.202.388 5 5 0 0 1-.253.382l-.018.025-.005.008-.002.002A.5.5 0 0 1 3.6 4.2l.003-.004.014-.019a4 4 0 0 0 .204-.31 2 2 0 0 0 .141-.267c.026-.06.034-.092.037-.103a.6.6 0 0 0-.09-.252A4 4 0 0 0 3.6 2.8l-.01-.012a5 5 0 0 1-.37-.543A1.53 1.53 0 0 1 3 1.5c0-.188.065-.368.119-.494.059-.138.134-.274.202-.388a6 6 0 0 1 .253-.382l.025-.035A.5.5 0 0 1 4.4.8m3 0-.003.004-.014.019a4 4 0 0 0-.204.31 2 2 0 0 0-.141.267c-.026.06-.034.092-.037.103v.004a.6.6 0 0 0 .091.248c.075.133.178.272.308.445l.01.012c.118.158.26.347.37.543.112.2.22.455.22.745 0 .188-.065.368-.119.494a3 3 0 0 1-.202.388 5 5 0 0 1-.253.382l-.018.025-.005.008-.002.002A.5.5 0 0 1 6.6 4.2l.003-.004.014-.019a4 4 0 0 0 .204-.31 2 2 0 0 0 .141-.267c.026-.06.034-.092.037-.103a.6.6 0 0 0-.09-.252A4 4 0 0 0 6.6 2.8l-.01-.012a5 5 0 0 1-.37-.543A1.53 1.53 0 0 1 6 1.5c0-.188.065-.368.119-.494.059-.138.134-.274.202-.388a6 6 0 0 1 .253-.382l.025-.035A.5.5 0 0 1 7.4.8m3 0-.003.004-.014.019a4 4 0 0 0-.204.31 2 2 0 0 0-.141.267c-.026.06-.034.092-.037.103v.004a.6.6 0 0 0 .091.248c.075.133.178.272.308.445l.01.012c.118.158.26.347.37.543.112.2.22.455.22.745 0 .188-.065.368-.119.494a3 3 0 0 1-.202.388 5 5 0 0 1-.252.382l-.019.025-.005.008-.002.002A.5.5 0 0 1 9.6 4.2l.003-.004.014-.019a4 4 0 0 0 .204-.31 2 2 0 0 0 .141-.267c.026-.06.034-.092.037-.103a.6.6 0 0 0-.09-.252A4 4 0 0 0 9.6 2.8l-.01-.012a5 5 0 0 1-.37-.543A1.53 1.53 0 0 1 9 1.5c0-.188.065-.368.119-.494.059-.138.134-.274.202-.388a6 6 0 0 1 .253-.382l.025-.035A.5.5 0 0 1 10.4.8" />
                </svg>
                Add Item
            </a>
        </div>
    </div>
}

<form method="post">
    @if (Model.MenuItem.Count != 0)
    {
        @foreach (var item in @Model.MenuItem)
        {
            <div class="row my-2">
                <div class="col-2">
                    <!-- left column -->
                    <img src="@item.ItemImage" alt="Item Image" class="img-thumbnail" />
                </div>
                <div class="col-10">
                    <!-- right column -->
                    <div class="row my-2">
                        <div class="col-4">
                            <label class="form-label" asp-for="@item.ItemName"></label>
                        </div>
                        <div class="col-8">
                            <label class="form-label">@item.ItemName</label>
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col-4">
                            <label class="form-label" asp-for="@item.MenuItemID"></label>
                        </div>
                        <div class="col-8">
                            <label class="form-label">@item.MenuItemID</label>
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col-4">
                            <label class="form-label" asp-for="@item.Price"></label>
                        </div>
                        <div class="col-8">
                            <label class="form-label">@item.Price</label>
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col-4">
                            <label class="form-label" asp-for="@item.MenuItemIngredients"></label>
                        </div>
                        <div class="col-8">
                            <label class="form-label">@string.Join(", ", item.MenuItemIngredients)</label>
                        </div>
                    </div>

                    <div class="row my-2">
                        <div class="col-4">
                            <label class="form-label" asp-for="@item.ItemTypeName"></label>
                        </div>
                        <div class="col-8">
                            <label class="form-label">@item.ItemTypeName
                            </label>
                        </div>
                    </div>

                    <a asp-page-handler="AddToCart" asp-route-id="@item.MenuItemID" class="btn btn-success">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart-plus" viewBox="0 0 20 20">
                            <path d="M8 7a.5.5 0 0 1 .5.5v1.5h1.5a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0v-1.5H6a.5.5 0 0 1 0-1h1.5V7.5A.5.5 0 0 1 8 7z" />
                            <path d="M0 1.5A.5.5 0 0 1 .5 1h1a.5.5 0 0 1 .485.379L2.89 5H14.5a.5.5 0 0 1 .49.598l-1.5 7A.5.5 0 0 1 13 13H4a.5.5 0 0 1-.491-.408L1.01 2H.5a.5.5 0 0 1-.5-.5zM3.14 6l1.25 5h8.22l1.25-5H3.14zM5.5 12a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm6 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                        </svg>
                        Add to Cart
                    </a>


                    @if (Model.CanManageMenuItems)
                    {
                        <div class="row my-2">
                            <div class="col-12">
                                <a asp-page="EditMenuItem" asp-route-id="@item.MenuItemID" class="btn btn-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 20 20">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z" />
                                    </svg>
                                    Edit
                                </a>
                                <button onclick="return confirm('Are you sure?')" class="btn btn-danger" asp-route-id="@item.MenuItemID" asp-page-handler="Delete">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 20 20">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z" />
                                        <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z" />
                                    </svg>
                                    Delete
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <hr />
        }
    }
    else
    {
        <div class="row my-2">
            <div class="col-12">
                <label class="form-label">No items yet. Click Add Item to add a new item.</label>
            </div>
        </div>
    }
</form>