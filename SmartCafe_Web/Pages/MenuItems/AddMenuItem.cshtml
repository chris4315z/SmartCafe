@page
@model SmartCafe_Web.Pages.MenuItems.AddMenuItemModel
@{
}

<div class="row text-center">
    <div class="col-12">
        <label class="form-label fs-1">Add MenuItem</label>
    </div>

</div>
<form method="post">
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewItem.ItemName" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewItem.ItemName" type="text" class="form-control" />
            <span asp-validation-for="NewItem.ItemName" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewItem.ItemImage" class="form-label"></label>
        </div>
        <div class="col-12">
            <textarea asp-for="NewItem.ItemImage" type="text" class="form-control"></textarea>
            <span asp-validation-for="NewItem.ItemImage" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewItem.Price" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewItem.Price" type="email" class="form-control" />
            <span asp-validation-for="NewItem.Price" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <label asp-for="NewItem.ItemTypeID" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewItem.ItemTypeID" type="text" class="form-control" />
            <span asp-validation-for="NewItem.ItemTypeID" class="text-danger"></span>
        </div>
    </div>




    <div class="row my-2">
        <div class="col-2">
            <label class="form-label">ItemType</label>
        </div>
        <div class="col-10">
            @foreach (var g in Model.ItemType)
            {
                <input type="checkbox" name="SelectedItemTypeIDs" class="form-check-input" value="@g.ItemTypeID" checked="@g.IsSelected" />
                <label>@g.ItemTypeName</label>
            }
        </div>
    </div>
    <div class="row my-2">
        <div class="col-12">
            <button type="submit" class="form-control btn btn-primary">Add MenuItem</button>
        </div>
    </div>
</form>
