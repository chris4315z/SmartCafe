@page
@model SmartCafe_Web.Pages.SystemUsers.SystemUserListModel
@{
}
<form method="post">
    <div class="row text-center">
        <div class="col-12">
            <label class="form-label fs-1">Manage Accounts</label>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-2">
            <a asp-page="/SystemUsers/AddSystemUser" class="btn btn-success">
                Add New Account
            </a>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.SystemUserList)
            {
                <tr>
                    <td>@user.SystemUsername</td>
                    <td>@user.SystemUserEmailAddress</td>
                    <td>
                        <button onclick="return confirm('Are you sure you want to promote this user to admin?')" class="btn btn-warning" asp-route-id="@user.SystemUserID" asp-page-handler="Promote">
                            Promote
                        </button>
                        <button onclick="return confirm('Are you sure you want to demote this user from admin?')" class="btn btn-info" asp-route-id="@user.SystemUserID" asp-page-handler="Demote">
                            Demote
                        </button>
                        <button onclick="return confirm('Are you sure you want to delete this user?')" class="btn btn-danger" asp-route-id="@user.SystemUserID" asp-page-handler="Delete">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
