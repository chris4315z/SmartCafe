@page
@model SmartCafe_Web.Pages.Account.RegisterModel
@{
}

<!--<body style="background-color:burlywood">-->


<div class="row text-center">
	<div class="col-12">
		<label class="form-label fs-1">Register</label>
	</div>

</div>
<form method="post">
    <div class="row my-2">
		<div class="col-4">
			<label asp-for="NewUser.FirstName" class="form-label"></label>
		</div>
		<div class="col-12">
			<input asp-for="NewUser.FirstName" type="text" class="form-control" />
			<span asp-validation-for="NewUser.FirstName" class="text-danger"></span>
		</div>
	</div>
    <div class="row my-2">
        <div class="col-4">
            <label asp-for="NewUser.LastName" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.LastName" type="text" class="form-control" />
            <span asp-validation-for="NewUser.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="NewUser.Email" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.Email" type="email" class="form-control" />
            <span asp-validation-for="NewUser.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="NewUser.Username" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.Username" type="text" class="form-control" />
            <span asp-validation-for="NewUser.Username" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="NewUser.Password" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.Password" type="password" class="form-control" />
            <span asp-validation-for="NewUser.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <label asp-for="NewUser.ConfirmPassword" class="form-label"></label>
        </div>
        <div class="col-12">
            <input asp-for="NewUser.ConfirmPassword" type="password" class="form-control" />
            <span asp-validation-for="NewUser.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-2">
        <div class="col-12">
            <button type="submit" class="form-control btn btn-primary">Register</button>
        </div>
    </div>
</form>