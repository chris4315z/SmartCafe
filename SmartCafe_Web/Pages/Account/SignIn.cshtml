@page
@model SmartCafe_Web.Pages.Account.Sign_inModel
@{
}
<body style="background-color: burlywood; min-height: 100vh; display: flex; flex-direction: column;"><br /><br /><br /><br /><br /><br />
    <!-- Centered Sign-in Form -->
    <div class="flex-grow-1 d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="text-center mb-4">
                        <label class="fs-1 fst-italic">Sign-in</label>
                    </div>
                    <form method="post" class="p-4 bg-light rounded shadow">
                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="User.Username" class="form-label fw-bold"></label>
                            <input asp-for="User.Username" type="text" class="form-control" />
                        </div>
                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="User.Password" class="form-label fw-bold"></label>
                            <input asp-for="User.Password" type="password" class="form-control" />
                        </div>
                        <!-- Sign-in button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" style="background-color: sienna; border: none;">Sign-in</button>
                        </div><br />
                        <!-- Forgot your password link button -->
                        <div class="forgotPassword" style="text-align: center;">
                            <a href="">Forgot your password?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
