@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to SmartCafé - Your Coffee Experience";
}

<!-- Background Section -->
<div class="home-background">
    <div class="overlay">
        <div class="container">
            <div class="row justify-content-center text-center text-white">
                <div class="col-lg-8">
                    <h1 class="display-4 font-weight-bold">Welcome to SmartCafé</h1>
                    <p class="lead mb-4">Where every sip feels like home. Your favorite coffee, just a click away.</p>
                    <a class="btn btn-primary btn-lg" href="/MenuItems/SearchMenuItems">Explore Our Menu</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Coffee Selections Section -->
<section class="coffee-selections py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Our Signature Coffee</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="~/images/iced-caramel-latte.jpg" class="card-img-top" alt="Iced Caramel Latte">
                    <div class="card-body">
                        <h5 class="card-title">Iced Caramel Latte</h5>
                        <p class="card-text">A strong, rich drink of caramel to kickstart your day.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/images/BaconCheeseCroissant.png" class="card-img-top" alt="Bacon And Cheese Croissant">
                    <div class="card-body">
                        <h5 class="card-title">Bacon & Cheese Croissant</h5>
                        <p class="card-text">A delicious sandwich to brighten your day!</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="~/images/PupCup.png" class="card-img-top" alt="Pup Cup">
                    <div class="card-body">
                        <h5 class="card-title">Pup Cup</h5>
                        <p class="card-text">Our new specialty for our furry friends!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Us Section -->
<section class="about-us py-5">
    <div class="container">
        <h2 class="text-center mb-4">About Us</h2>
        <p class="text-center">At SmartCafé, we believe in bringing you the best coffee experience. Our expert baristas craft each cup with passion and care. Whether you're looking for a bold espresso, a frothy cappuccino, or a smooth latte, we have the perfect blend for you. Join us and discover your new favorite coffee.</p>
    </div>
</section>