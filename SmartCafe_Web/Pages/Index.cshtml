@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center">
    <div class="row justify-content-start">
        @foreach (var item in Model.ItemDisplays)
        {
            <div class="col-4">
                <a asp-page="ViewItem" asp-route-id="@item.MenuItemID">
                    <img src="@item.ItemImage" title="@item.ItemName" />
                </a>
            </div>
        }
    </div>
</div>
